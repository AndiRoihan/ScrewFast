---
// Import the necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import HeroSection from "@components/sections/landing/HeroSection.astro";
import HeroSectionAlt from "@components/sections/landing/HeroSectionAlt.astro";
import ClientsSection from "@components/sections/landing/ClientsSection.astro";
import FeaturesGeneral from "@components/sections/features/FeaturesGeneral.astro";
import FeaturesNavs from "@components/sections/features/FeaturesNavs.astro";
import TestimonialsSection from "@components/sections/testimonials/TestimonialsSection.astro";
import PricingSection from "@components/sections/pricing/PricingSection.astro";
import FAQ from "@components/sections/misc/FAQ.astro";
// import AnnouncementBanner from "@components/ui/banners/AnnouncementBanner.astro";
import heroImage from "@images/hero-image.avif";
import faqs from "@data/faqs.json";
import features from "@data/features.json";
import pricing from "@data/pricing.json";
import featureImage from "@images/features-image.png";
import rotiPisangCokelat from "@images/roti-pisang-cokelat.png";
import rotiManisIsi from "@images/roti-manis-isi.png";
import rotiAbon from "@images/roti-abon.png";
import owner from "@images/owner.jpeg";
import { partnersData } from "@/data_files/constants";

const avatarSrcs: Array<string> = [
  "https://images.unsplash.com/photo-1568602471122-7832951cc4c5?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1531927557220-a9e23c1e4794?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1541101767792-f9b2b1c4f127?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&&auto=format&fit=facearea&facepad=3&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1492562080023-ab3db95bfbce?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
];
---

<MainLayout>
  <!-- <AnnouncementBanner
    btnId="dismiss-button"
    btnTitle="Explore ScrewFast on GitHub"
    url="https://github.com/mearashadowfax/ScrewFast"
  /> -->

  <section id="home">
    <HeroSection
      title=`<span
          class="text-yellow-500 dark:text-yellow-400">Aroma Bakery</span> Halal, Nikmat, dan Higienis Sejak 2011`
      subTitle="Dibuat dengan resep rumahan pilihan dan bahan berkualitas, Aroma Bakery menghadirkan roti lembut dengan berbagai isian favorit. Cocok untuk camilan sehari-hari, acara keluarga, hingga kebutuhan toko & warung."
      primaryBtn="Pesan Sekarang Via WhatsApp"
      primaryBtnURL="https://wa.me/6285299910439"
      secondaryBtn="Contact Sales Team"
      secondaryBtnURL="/contact"
      withReview={true}
      avatars={avatarSrcs}
      rating=`<span class="font-bold">5</span> / 5`
      starCount={5}
      reviews=`Direview oleh berbagai <span class="font-bold">Customer</span>`
      src={heroImage}
      alt="Stack of ScrewFast product boxes containing assorted hardware tools"
    />

    <ClientsSection
      title="Didukung oleh Kolaborasi Lokal"
      subTitle="Aroma Bakery berkolaborasi dengan program pendampingan digital bersama DekatLokal dan Rumah BUMN Makassar untuk memperluas jangkauan pemasaran dan meningkatkan kualitas layanan."
      partners={partnersData}
    />

    <FeaturesGeneral
      title="Kenapa Memilih Aroma Bakery?"
      subTitle="Kami percaya bahwa roti bukan hanya sekadar makanan, tetapi bagian dari momen hangat bersama keluarga. Karena itu, setiap produk Aroma Bakery dibuat dengan sepenuh hati dan standar kualitas yang kami jaga sejak 2011."
      src={featureImage}
      alt="ScrewFast products in floating boxes"
      features={features}
    />
  </section>

  <section id="products">
    <FeaturesNavs
      title=`Nikmati roti lembut dan harum dari <span class="text-yellow-500 dark:text-yellow-400">Aroma Bakery</span> dengan berbagai pilihan rasa yang disukai semua kalangan.`
      tabs={[
        {
          heading: "Roti Manis Isi",
          content:
            "Varian: Cokelat, Keju, Stroberi, dan Nanas <br> Roti dengan tekstur lembut dan isian manis yang menyatu sempurna di setiap gigitan. Hadir dengan rasa klasik yang familiar di lidah, cocok sebagai camilan santai, bekal anak ke sekolah, atau teman minum kopi/teh di sore hari. ",
          svg: "breadTab",
          src: rotiManisIsi,
          alt: "Yellow and black heavy equipment on brown grass field",
          first: true,
        },
        {
          heading: "Roti Pisang Cokelat",
          content:
            "Perpaduan pisang manis yang lembut dengan lelehan cokelat hangat menciptakan rasa yang kaya dan memanjakan. Favorit banyak pelanggan karena aromanya menggugah selera dan membuat setiap suapan terasa istimewa.",
          svg: "breadTab",
          src: rotiPisangCokelat,
          alt: "A screenshot or graphic representation of the intuitive dashboard",
          second: true,
        },
        {
          heading: "Roti Abon",
          content:
            "Roti lembut bertekstur ringan dengan taburan abon gurih yang menggoda. Rasanya tidak terlalu manis, sehingga sangat cocok untuk sarapan cepat, hidangan rapat, ataupun sebagai camilan pengganjal perut saat beraktivitas.",
          svg: "breadTab",
          src: rotiAbon,
          alt: "Gray metal building frame near tower crane during daytime",
        },
      ]}
      subTitle=`Harga: Mulai dari <span class="text-yellow-500 dark:text-yellow-400">Rp3.000/pcs</span> <br> Berat: <span class="text-yellow-500 dark:text-yellow-400">Â±35 gram</span> per roti, pas untuk sekali makan, tidak terlalu besar dan tidak terlalu kecil.``
    />
  </section>

  <section id="about-us">
    <TestimonialsSection
      title="Tentang Aroma Bakery"
      subTitle="Aroma Bakery adalah usaha bakery rumahan yang didirikan oleh Hj. Syohra sejak tahun 2011 di Makassar. Kami berkomitmen menghadirkan roti yang lezat, higienis, dan terjangkau bagi semua kalangan."
      ;
      testimonials={[
        {
          content:
            "Kami percaya roti yang baik bukan hanya lezat, tapi dibuat dengan hati dan ketulusan untuk keluarga.",
          author: "Hj. Syohra",
          role: "Founder | Aroma Bakery",
          avatarSrc:
            "owner",
        },
      ]}
      statistics={[
        {
          count: "12+ Tahun",
          description:
            "Pengalaman sejak 2011",
        },
        {
          count: "6 Varian",
          description:
            "Pilihan rasa favorit keluarga",
        },
        {
          count: "50+ Warung",
          description:
            "Partner titip jual & distribusi",
        },
        {
          count: "1000+ Roti",
          description: "Diproduksi setiap minggu",
        },
      ]}
    />
  </section>

  <section id="paket">
    <PricingSection pricing={pricing} />
  </section>

  <section id="faq">
    <FAQ title="Frequently<br />asked questions" faqs={faqs} />

    <iframe class="m-auto w-full h-96"
              src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2720.7935181933544!2d119.4168485530981!3d-5.117083943528166!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x2dbefd00140d6b8f%3A0x3ec0dee05d5870ae!2sAroma%20Bakery!5e1!3m2!1sid!2sid!4v1762699313287!5m2!1sid!2sid" 
              allowfullscreen
              loading="lazy"
              referrerpolicy="no-referrer-when-downgrade"
              title="Lokasi Aroma Bakery"></iframe>
  
    <HeroSectionAlt
      title="Siap Pesan Roti Hari Ini?"
      subTitle="Klik tombol di bawah untuk langsung chat WhatsApp."
      url="https://wa.me/6285299910439"
    />
  </section>
</MainLayout>
